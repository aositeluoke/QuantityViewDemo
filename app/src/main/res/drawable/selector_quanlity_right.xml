<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--可点击按下时-->
    <item android:state_enabled="true" android:state_pressed="true" android:drawable="@drawable/icon_xq_add_p">
        <shape>
            <solid android:color="#d2d2d2" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />

        </shape>
    </item>


    <!--可点击 未按下时-->
    <item android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/icon_xq_add_n">
        <shape>
            <solid android:color="#f2f2f2" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />

        </shape>
    </item>


    <!--不可点击时-->
    <item android:state_enabled="false" android:drawable="@drawable/icon_xq_add">
        <shape>
            <solid android:color="#f2f2f2" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />

        </shape>
    </item>
</selector>